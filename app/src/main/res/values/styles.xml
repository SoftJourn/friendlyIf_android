<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:textColorPrimary">@color/actionbar_text_color</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:dialogTheme">@style/DialogStyle</item>
        <item name="android:alertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/dialog_button_color</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--For settings screen-->
    <style name="AppStyle">
        <item name="android:textColorSecondary">@color/setting_text_color</item>
    </style>

    <style name="how_its_work_style" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/how_its_works_text_color</item>
        <item name="android:textSize">17dp</item>
        <item name="android:background">@color/background_color</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/setting_text_color</item>
        <item name="colorPrimaryDark">@color/setting_text_color</item>
        <item name="colorAccent">@color/setting_text_color</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>
</resources>
